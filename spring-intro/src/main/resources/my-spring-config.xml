<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- bean definitions here -->
    <bean id="hello" class="com.pratiti.taining.component.HelloWorld" />

	<bean id="addition" class="com.pratiti.taining.component.SumOfNumber" />
	<!-- loading annotated bins -->
	<context:component-scan base-package="com.pratiti.taining.component"></context:component-scan>
</beans>